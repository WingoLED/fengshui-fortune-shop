<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= typeof title !== 'undefined' ? title + ' - ' : '' %>Feng Shui Fortune Shop</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <meta name="description" content="Feng Shui Fortune Shop - ornaments, guidance, and tips.">
  <meta name="robots" content="index, follow">
</head>
<body>
  <header class="site-header">
    <div class="topbar">
      <div class="container d-flex justify-content-between align-items-center py-2">
        <div class="brand">
          <a href="/" class="d-flex align-items-center text-decoration-none">
            <!-- Inline SVG Logo: Bagua + Tree -->
            <svg width="56" height="56" viewBox="0 0 100 100" class="me-2" aria-hidden="true">
              <defs>
                <linearGradient id="g1" x1="0" y1="0" x2="1" y2="1">
                  <stop offset="0%" stop-color="#0aa36f"/>
                  <stop offset="100%" stop-color="#1e6f50"/>
                </linearGradient>
              </defs>
              <circle cx="50" cy="50" r="46" fill="url(#g1)" stroke="#0b5" stroke-width="2"/>
              <!-- Bagua segments -->
              <g transform="translate(50,50)">
                <% for (let i=0; i<8; i++) { %>
                  <path d="M0,-38 A38,38 0 0,1 38,0 L0,0 Z"
                        fill="<%= i%2===0 ? 'rgba(255,255,255,0.85)' : 'rgba(0,0,0,0.25)' %>"
                        transform="rotate(<%= i*45 %>)"/>
                <% } %>
                <circle r="10" fill="rgba(255,255,255,0.9)"/>
              </g>
              <!-- Tree silhouette -->
              <path d="M55 60 C52 50, 60 44, 57 36 C62 36, 66 30, 70 34 C68 40, 74 44, 72 50 C78 52, 78 58, 72 60 Z"
                    fill="#0b3d2e" opacity="0.9"/>
              <rect x="58" y="60" width="4" height="10" fill="#0b3d2e"/>
            </svg>
            <div>
              <div class="logo-text">Feng Shui Fortune Shop</div>
              <div class="domain">fengshuifortuneshop.com</div>
            </div>
          </a>
        </div>
        <div class="auth">
          <% if (user) { %>
            <span class="me-2">Hello, <strong><%= user.name || user.email %></strong> (<%= user.role %>)</span>
            <a href="/account" class="btn btn-sm btn-outline-light me-2">Account</a>
            <% if (['admin','owner','editor'].includes(user.role)) { %>
              <a href="/admin/products" class="btn btn-sm btn-warning me-2">CMS</a>
            <% } %>
            <form method="post" action="/logout" class="d-inline">
              <button class="btn btn-sm btn-light">Logout</button>
            </form>
          <% } else { %>
            <a href="/login" class="btn btn-sm btn-light me-2">Login</a>
            <a href="/register" class="btn btn-sm btn-outline-light">Register</a>
          <% } %>
        </div>
      </div>
    </div>
    <nav class="nav-main">
      <div class="container">
        <ul class="nav">
          <% (typeof nav !== 'undefined' ? nav : []).forEach(item => { %>
            <li class="nav-item"><a class="nav-link" href="<%= item.url %>"><%= item.label %></a></li>
          <% }) %>
        </ul>
      </div>
    </nav>
  </header>

  <main class="container my-4">
    <%- body %>
  </main>

  <footer class="site-footer">
    <div class="container py-4">
      <div class="row">
        <div class="col-md-6">
          <h5>Contact</h5>
          <p>
            <strong>Address:</strong>
            <a href="https://maps.google.com/?q=123+Nova+Central" target="_blank" rel="noopener">
              123 Nova Central
            </a><br>
            <strong>Email:</strong>
            <a href="mailto:<%= (typeof settings !== 'undefined' && settings.contactEmail) ? settings.contactEmail : 'info@fengshuifortuneshop.com' %>">
              <%= (typeof settings !== 'undefined' && settings.contactEmail) ? settings.contactEmail : 'info@fengshuifortuneshop.com' %>
            </a>
          </p>
          <p class="copyright">
            © <%= new Date().getFullYear() %> fengshuifortuneshop.com<br>
            Coder: 123 Nova Central — Email: <a href="mailto:WingoAgency@yahoo.com">WingoAgency@yahoo.com</a>
          </p>
        </div>
        <div class="col-md-6">
          <h5>Follow Us</h5>
          <p class="social">
            <a href="<%= (typeof settings !== 'undefined' && settings.socialFacebook) ? settings.socialFacebook : 'https://facebook.com' %>" target="_blank" class="me-3">Facebook</a>
            <a href="<%= (typeof settings !== 'undefined' && settings.socialInstagram) ? settings.socialInstagram : 'https://instagram.com' %>" target="_blank" class="me-3">Instagram</a>
            <a href="<%= (typeof settings !== 'undefined' && settings.socialPinterest) ? settings.socialPinterest : 'https://pinterest.com' %>" target="_blank" class="me-3">Pinterest</a>
          </p>
        </div>
      </div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>
